{
  "name": "lynnx",
  "description": "üêÜ Powerful, accessible and lightweight URL shortener built with SvelteJS and Rust.",
  "version": "0.0.1",
  "scripts": {
    "dev": "yarn run-p dev:sapper dev:styles",
    "dev:sapper": "sapper dev",
    "dev:styles": "postcss static/styles/tailwind.css -o static/styles/tailwind.build.css -w",
    "build": "yarn build:styles build --legacy",
    "build:styles": "NODE_ENV=production postcss static/styles/tailwind.css -o static/styles/tailwind.build.css",
    "export": "yarn build:styles && sapper export --legacy",
    "start": "node __sapper__/build",
    "lint": "yarn eslint src/* --ext ts,js,svelte"
  },
  "dependencies": {
    "@fullhuman/postcss-purgecss": "^2.3.0",
    "compression": "^1.7.1",
    "polka": "next",
    "sirv": "^1.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.10.4",
    "@babel/runtime": "^7.10.5",
    "@rollup/plugin-babel": "^5.1.0",
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-node-resolve": "^8.4.0",
    "@rollup/plugin-replace": "^2.2.0",
    "cz-conventional-changelog": "3.2.0",
    "eslint": "^7.3.1",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-svelte3": "^2.7.3",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.1",
    "rollup": "^2.3.4",
    "rollup-plugin-svelte": "^5.0.1",
    "rollup-plugin-terser": "^6.1.0",
    "sapper": "^0.27.0",
    "svelte": "^3.24.0",
    "tailwindcss": "^1.5.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
